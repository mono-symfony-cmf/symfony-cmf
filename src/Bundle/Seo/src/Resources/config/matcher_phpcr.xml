<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cmf_seo.error.suggestion_provider.parent" class="Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\ParentSuggestionProvider">
            <argument type="service" id="doctrine_phpcr" />
            <argument>%cmf_routing.dynamic.persistence.phpcr.route_basepaths%</argument>
            <tag name="cmf_seo.suggestion_provider" group="parent" />
        </service>

        <service id="cmf_seo.error.suggestion_provider.sibling" class="Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\SiblingSuggestionProvider">
            <argument type="service" id="doctrine_phpcr" />
            <argument>%cmf_routing.dynamic.persistence.phpcr.route_basepaths%</argument>
            <tag name="cmf_seo.suggestion_provider" group="sibling" />
        </service>

    </services>

</container>
